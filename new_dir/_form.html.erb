<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class ='form-group'>
    <div class='control-label col-xs-10'>
      <%= f.label :username, class: "fix-label" %>
      <div class='col-xs-600'>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
      </div>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-xs-10'>
      <%= f.label :email, class: "fix-label" %>

      <div class='col-xs-600'>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter Email"%>
      </div>
    </div>
  </div>

    <div class='form-group'>
    <div class='control-label col-xs-10'>
      <%= f.label :password, class: "fix-label" %>

      <div class='col-xs-600'>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%>
      </div>
    </div>
  </div>


    <%= f.submit(@user.new_record? ? "Register" :  'Update Account', class: ' btn btn-primary btn-lrg')%>
    <%= link_to 'Cancel', ideas_path, class: 'btn btn-warning btn-lrg'%>

<% end %>
  </div>
</div>