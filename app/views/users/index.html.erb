<h1 align='center'> All Users</h1>

<table class='table table-bordered table-hover'>
  <th></th>
  <th>Username</th>
  <th>Departments Owned</th>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to gravatar_for(user), user_path(user) %></td>
      <td><%= link_to user.username, user_path(user)%></td>
      <td><%= pluralize(user.ideas.count, 'idea') if user.ideas %></td>
    </tr>
  <% end %>
</table>