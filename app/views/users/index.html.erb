<h1 align='center'> All Users</h1>

<table class='table table-bordered table-hover'>
  <th></th>
  <th>Username</th>
  <th>Departments Owned</th>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to gravatar_for(user), user_path(user) %></td>
      <td><%= link_to user.username, user_path(user)%></td>
      <td><%= pluralize(user.departments.count, 'department') if user.departments %></td>
      <% if logged_in? and current_user.admin? %>
      <td><%= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Do you really want to delete user and all departments? THIS CANNOT BE UNDONE"} %></td>
      <% end %>
    </tr>
  <% end %>
</table>