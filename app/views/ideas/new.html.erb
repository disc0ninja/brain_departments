<div class='ideaContent'>
<h1> Add an idea </h1>

<% if @idea.errors.any? %>
<h2>Please fix the following to submit</h2>
<ul>
  <% @idea.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
  <% end %>
</ul>
<% end %>


<%= form_for @idea do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p><br />
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p><br />
  <p>
    <%= f.submit %>
  </p>
</div>
<% end %>