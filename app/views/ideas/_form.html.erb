<%= render 'shared/errors', obj: @idea %>

<div class='row'>
  <div class='col-xs-12'>

<%= form_for(@idea, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class ='form-group'>
    <div class='control-label col-xs-10'>
    <%= f.label :title, class: "fix-label" %>
      <div class='col-xs-600'>
    <%= f.text_field :title, class: "form-control", placeholder: "Department Name", autofocus: true %>
      </div>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-xs-10'>
      <%= f.label :description, class: "fix-label" %>

      <div class='col-xs-600'>
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Department content goes here..."%>
      </div>
    </div>
  </div>


    <%= f.submit 'Create Department', class: ' btn btn-success btn-lrg'%>
    <%= link_to 'Cancel', ideas_path, class: 'btn btn-warning btn-lrg'%>

<% end %>
  </div>
</div>